{
    "name": "@ensei/mission-engine",
    "version": "1.0.0",
    "description": "Mission pricing and calculation engine for Ensei Platform",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/server.ts",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@ensei/shared-types": "1.0.0",
        "@fastify/cors": "^9.0.1",
        "fastify": "^4.29.1",
        "tsx": "^4.7.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.spec.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/__tests__/**"
        ],
        "moduleNameMapper": {
            "^@ensei/(.*)$": "<rootDir>/../../packages/$1/src"
        },
        "moduleDirectories": [
            "node_modules",
            "<rootDir>/../../node_modules"
        ]
    }
}
