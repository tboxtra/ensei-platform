{
  "name": "ensei-platform-functions",
  "description": "Ensei Platform Firebase Functions",
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.json && cp lib/functions/index.js lib/index.js",
    "build:watch": "tsc --watch",
    "lint": "echo 'Linting skipped for deployment'",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "node ../scripts/test-honors-calculator.js"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "type": "commonjs",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "firebase-functions-test": "^3.1.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.6.3"
  },
  "private": true
}